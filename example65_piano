(declare-sort thing)
(declare-sort person)
(declare-const Sam person)
(declare-const chair thing)
(declare-const piano thing)
(declare-rel isInstrument (thing))
(declare-rel stand (person))
(declare-rel sing (person))
(declare-rel broken (thing))


(assert (not (= chair piano)))

(assert (= (stand Sam) (broken chair)))
(assert (forall ((x thing)) (= (sing Sam) (= (isInstrument x) (broken x)))))

(assert (forall ((x thing)) (= (= x piano) (isInstrument x))))

(assert (and (not (stand Sam)) (sing Sam)))
;(assert (and (stand Sam) (not (sing Sam))))

(assert (forall ((x thing)) (=> (broken x) (or (= x chair) (= x piano)))))

(assert (exists ((x thing)) (broken x)))
(check-sat)
(get-model)
