(declare-sort _person)
(declare-const _man _person)
(declare-const _hisSon _person)
(declare-rel _notLift (_person _person))
(declare-rel _weak (_person))
(declare-rel _heavy (_person))

(assert (not (= _man _hisSon)))

(assert (forall ((x _person) (y _person)) (=> (not (= x y)) (= (_notLift x y) (and (_weak x) (_heavy y))))))

;(assert (not (=> (_notLift _man _hisSon) (_weak _man))))
(assert (not (=> (_notLift _man _hisSon) (_heavy _hisSon))))

(check-sat)
(get-model)


