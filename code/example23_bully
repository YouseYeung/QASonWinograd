(declare-sort thing)
(declare-sort person)
(declare-const olderStudents person)
(declare-const youngerStudents person)
(declare-const we person)
(declare-rel bully (person person))
(declare-rel rescue (person person))
(declare-rel punish (person person))

(assert (not (= youngerStudents olderStudents)))

(assert (forall ((x person) (y person)) (=> (not (= x y)) (=> (bully x y) (and (rescue we y) (punish we y))))))

(assert (forall ((x person) (y person)) (= (and (= x olderStudents) (= y youngerStudents)) (bully x y))))

(assert (or (and (rescue we olderStudents) (not (rescue we youngerStudents))) (and (rescue we youngerStudents) (not (rescue we olderStudents)))))
(assert (or (and (punish we olderStudents) (not (punish we youngerStudents))) (and (punish we youngerStudents) (not (punish we olderStudents)))))

(assert (not (=> (bully olderStudents youngerStudents) (rescue we youngerStudents))))
;(assert (not (=> (bully olderStudents youngerStudents) (punish we olderStudents))))

(check-sat)