(declare-sort person)
(declare-sort question)
(declare-const lawyer  person)
(declare-const  witness  person)
(declare-const  q  question)
(declare-rel  ask ( person  person  question))
(declare-rel  answer ( person  question))
(declare-rel  repeat ( person  question))

(assert (not (=  lawyer  witness)))

(assert (forall ((x  person) (y  person)) (=> (not (= x y)) (= ( ask x y  q) (and ( answer y  q) ( repeat x  q))))))

(assert (not (=> ( ask  lawyer  witness  q) ( repeat  lawyer  q))))
;(assert (not (=> ( ask  lawyer  witness  q) ( answer  witness  q))))
(check-sat)
(get-model)


